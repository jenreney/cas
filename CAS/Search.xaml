<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAS.Search"
             Title="Search Cars - Car 1">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Type your keyword here"
           HorizontalTextAlignment="Center"/>
            <Label Text="Advanced Search" FontAttributes="Bold" FontSize="20"></Label>
            <Label FontSize="18">Brand</Label>
            <Picker Title="Choose a Brand"></Picker>

            <Label FontSize="18">Type</Label>
            <Picker Title="Choose a Type"></Picker>

            <CheckBox x:Name="MyCheckBox"/>
            <Label Text="test"/>

            <Button x:Name="btnFind" Text="Reveal All Cars" Clicked="ForwardAllResult"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>